@page
@model UnifiedUISystem.Pages.SofdCore.CreateModel

@{
    ViewData["Title"] = "Opret Bruger";
}

<h1 class="text-center mb-4">Opret Bruger</h1>

<div class="container mt-4">
    <form method="post">
        <div class="row">
            <!-- Personlige Detaljer -->
            <div class="col-md-6">
                <div class="p-3 mb-4 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
                    <h5 class="text-primary">Personlige Detaljer</h5>
                    <div class="mb-3">
                        <label asp-for="Account.FirstName"></label>
                        <input asp-for="Account.FirstName" class="form-control" />
                        <span asp-validation-for="Account.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.LastName"></label>
                        <input asp-for="Account.LastName" class="form-control" />
                        <span asp-validation-for="Account.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.Position"></label>
                        <input asp-for="Account.Position" class="form-control" />
                        <span asp-validation-for="Account.Position" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Ansættelsesoplysninger -->
            <div class="col-md-6">
                <div class="p-3 mb-4 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
                    <h5 class="text-primary">Ansættelsesoplysninger</h5>
                    <div class="mb-3">
                        <label asp-for="Account.JobType"></label>
                        <select asp-for="Account.JobType" class="form-control">
                            <option value="FullTime">Fuld Tid</option>
                            <option value="PartTime">Deltid</option>
                            <option value="Other">Andet</option>
                        </select>
                        <span asp-validation-for="Account.JobType" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.EmployeeNumber"></label>
                        <input asp-for="Account.EmployeeNumber" class="form-control" />
                        <span asp-validation-for="Account.EmployeeNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.WorkHours"></label>
                        <input asp-for="Account.WorkHours" type="number" step="0.1" class="form-control" />
                        <span asp-validation-for="Account.WorkHours" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.StartDate"></label>
                        <input asp-for="Account.StartDate" type="date" class="form-control" />
                        <span asp-validation-for="Account.StartDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.EndDate"></label>
                        <input asp-for="Account.EndDate" type="date" class="form-control" />
                        <span asp-validation-for="Account.EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Handling -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Gem Bruger</button>
            <a asp-page="../Index" class="btn btn-secondary">Annuller</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    body {
        padding-bottom: 70px; /* Tilføj plads til footer */
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px 0;
        text-align: center;
        border-top: 1px solid #e7e7e7;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>