@page "{id:int}"
@model UnifiedUISystem.Pages.SofdCore.DetailsModel

@{
    ViewData["Title"] = "Medarbejderdetaljer";
}

<h1 class="text-center mb-4">Medarbejderdetaljer</h1>

@if (Model.Account == null)
{
    <div class="alert alert-danger text-center" role="alert">
        Ingen medarbejder fundet.
    </div>
}
else
{
    <div class="container mt-4">
        <div class="p-3 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
            <h5 class="text-primary">Personlige Detaljer</h5>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Fornavn:</label>
                <div class="col-sm-8">@Model.Account.FirstName</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Efternavn:</label>
                <div class="col-sm-8">@Model.Account.LastName</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Stilling:</label>
                <div class="col-sm-8">@Model.Account.Position</div>
            </div>
        </div>

        <div class="p-3 mt-4 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
            <h5 class="text-primary">Ansættelsesoplysninger</h5>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Jobtype:</label>
                <div class="col-sm-8">@Model.Account.JobType</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Medarbejdernummer:</label>
                <div class="col-sm-8">@Model.Account.EmployeeNumber</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Arbejdstimer:</label>
                <div class="col-sm-8">@Model.Account.WorkHours</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Startdato:</label>
                <div class="col-sm-8">@Model.Account.StartDate.ToShortDateString()</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Slutdato:</label>
                <div class="col-sm-8">@Model.Account.EndDate?.ToShortDateString()</div>
            </div>
        </div>

        <div class="p-3 mt-4 rounded" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
            <h5 class="text-primary">Metadata</h5>
            <div class="row mb-3">
                <label class="col-sm-4 fw-bold">Sidst opdateret:</label>
                <div class="col-sm-8">@Model.Account.LastUpdated?.ToShortDateString()</div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="./Edit" asp-route-id="@Model.Account.Id" class="btn btn-primary">Rediger</a>
            <a asp-page="./Delete" asp-route-id="@Model.Account.Id" class="btn btn-danger">Slet</a>
            <a asp-page="../Index" class="btn btn-secondary">Tilbage</a>
        </div>
    </div>
}
<style>
    body {
        padding-bottom: 70px; /* Tilføj plads til footer */
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px 0;
        text-align: center;
        border-top: 1px solid #e7e7e7;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>