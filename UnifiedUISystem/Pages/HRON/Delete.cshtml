@page "{id:int}"
@model UnifiedUISystem.Pages.HRON.DeleteModel

<h2>Slet jobopslag</h2>
<p>Er du sikker på, at du vil slette følgende jobopslag?</p>

<div>
    <p><strong>Jobtitel:</strong> @Model.JobAdvert.JobTitle</p>
    <p><strong>Ansvarlig:</strong> @Model.JobAdvert.Responsible</p>
    <p><strong>Afdeling:</strong> @Model.JobAdvert.Department</p>
    <p><strong>Visninger:</strong> @Model.JobAdvert.Views</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Slet</button>
    <a asp-page="../Index" asp-route-activeTab="hron" class="btn btn-secondary">Annuller</a>
</form>
<style>
    body {
        padding-bottom: 70px; /* Tilføj plads til footer */
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px 0;
        text-align: center;
        border-top: 1px solid #e7e7e7;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>