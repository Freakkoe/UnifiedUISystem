@page "{id:int}"
@model UnifiedUISystem.Pages.HRON.DetailsModel
@{
    ViewData["Title"] = "Job Details";
}

<h1 class="text-center mb-4">Detaljer for Job</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
        <h4>@Model.JobAdvert.JobTitle</h4>
    </div>
    <div class="card-body">
        <!-- Generelle Detaljer -->
        <h5 class="mt-3">Generelle Detaljer</h5>
        <table class="table table-striped table-hover w-75 mx-auto">
            <tbody>
                <tr>
                    <th>Publiceringsdato</th>
                    <td>@Model.JobAdvert.PublishingDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Ansøgningsfrist</th>
                    <td>@Model.JobAdvert.ApplicationDeadline.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Medie</th>
                    <td>@Model.JobAdvert.Media</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>@Model.JobAdvert.Status</td>
                </tr>
                <tr>
                    <th>Ansvarlig</th>
                    <td>@Model.JobAdvert.Responsible</td>
                </tr>
                <tr>
                    <th>Afdeling</th>
                    <td>@Model.JobAdvert.Department</td>
                </tr>
            </tbody>
        </table>

        <!-- Statistikker -->
        <h5 class="mt-4">Statistikker</h5>
        <table class="table table-striped table-hover w-75 mx-auto">
            <tbody>
                <tr>
                    <th>Visninger</th>
                    <td><i class="bi bi-eye"></i> @Model.JobAdvert.Views</td>
                </tr>
                <tr>
                    <th>Ansøgninger</th>
                    <td>@Model.JobAdvert.Applications</td>
                </tr>
                <tr>
                    <th>Kommentarer</th>
                    <td>@Model.JobAdvert.Comments</td>
                </tr>
                <tr>
                    <th>Arkiveret</th>
                    <td>@(Model.JobAdvert.IsArchived ? "Ja" : "Nej")</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer text-center">
        <a asp-page="../Index" asp-route-activeTab="hron" class="btn btn-secondary">Tilbage</a>
    </div>
</div>

<style>
    body {
        padding-bottom: 70px; /* Tilføj plads til footer */
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8f9fa;
        padding: 10px 0;
        text-align: center;
        border-top: 1px solid #e7e7e7;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>
